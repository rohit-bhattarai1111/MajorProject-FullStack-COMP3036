{
  "name": "@repo/utils",
  "version": "0.0.1",
  "private": true,
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
   "dev": "tsc --watch",
   "build": "tsc",
   "test": "tsc --noEmit",
   "lint": "eslint . --max-warnings 0"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./db/*": {
      "types": "./dist/db/*.d.ts",
      "default": "./dist/db/*.js"
    }
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@repo/typescript-config": "workspace:*"
  }
}